<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0.7dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    app:contentPaddingBottom="0dp">

    <LinearLayout
        android:id="@+id/listRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/add_new_data"
        android:backgroundTint="#DEFFFFFF"
        android:backgroundTintMode="src_over" >


        <LinearLayout
            android:id="@+id/listRoot1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/listGenderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

            <TextView
                android:id="@+id/listGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qaulification:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />


            <TextView
                android:id="@+id/listEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occupation:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

            <TextView
                android:id="@+id/listOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Location:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

            <TextView
                android:id="@+id/listLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Income:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

            <TextView
                android:id="@+id/listIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

            <TextView
                android:id="@+id/listAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listMangalik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="casual"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/listImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                app:srcCompat="@drawable/fui_idp_button_background_github" />

            <ImageView
                android:id="@+id/listDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_delete_forever"
                android:layout_gravity="end"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
