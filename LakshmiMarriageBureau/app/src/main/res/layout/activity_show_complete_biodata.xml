<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_new_data"
    android:backgroundTint="#DEFFFFFF"
    android:backgroundTintMode="src_over"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/listRoot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/showImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:onClick="onShareImage" />

        <ImageView
            android:id="@+id/showImage2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/fui_idp_button_background_facebook" />

        <TextView
            android:id="@+id/showBiodataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="View Biodata"
            android:textColor="#213292"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Date of Birth:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showDateoFBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Time of Birth:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showTimeoFBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Place of Birth:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showPlaceoFBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Age:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gender:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Height:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Current Location:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Occupation:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showOccupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Qualification:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Income:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Budget:"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        <TextView
            android:id="@+id/showBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/showStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/showMangalik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>



